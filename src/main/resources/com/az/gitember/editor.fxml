<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<?import org.kordamp.ikonli.javafx.StackedFontIcon?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.az.gitember.controller.editor.EditorController"
            fx:id = "borderPane"
            prefHeight="400.0" prefWidth="600.0"
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
            onKeyPressed="#handleKeyPressed"

>
    <top>
        <ToolBar>
            <Button text="Save as ..." fx:id="saveBtn" onAction="#saveFile">
                <graphic>
                    <StackedFontIcon style="-fx-icon-color: text_color">
                        <FontIcon iconLiteral="fa-download" iconSize="24" />
                    </StackedFontIcon>
                </graphic>
            </Button>
            <Pane  HBox.hgrow="ALWAYS" />
            <CheckBox fx:id="annotationCb" text="Annotate"/>
            <TextField  fx:id="searchText" promptText="Search" />
        </ToolBar>
    </top>
   <center>

   </center>
</BorderPane>
